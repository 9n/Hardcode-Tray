#!/bin/bash
cmd_path=$(which hardcode-tray)
if [ $? -ne 0 ]; then
    path="."
else
    path=$(dirname $(realpath "$cmd_path"))
fi
cd "$path"/dataoriginal/scripts
mkdir -p /_linux/

f="/_linux/$2"
if [[ $1 == *.svg ]]; then
    python3 svgtopng.py "$1" "$f"
else
    cp $1 $f
fi

zip -u "$3""$4" "$f"
rm -rf "/_linux/"
