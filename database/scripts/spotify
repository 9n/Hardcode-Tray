#!/bin/bash
cd ./database/scripts/
cp /opt/spotify/spotify-client/Data/resources.zip resources_old.zip
unzip resources_old.zip -d resources_old/



if [[ $1 == *.svg ]]; then
    inkscape $1 --export-png=resources_old/_linux/spotify_icon.ico
fi
    convert $1 --background none resources_old/_linux/spotify_icon.ico
    
cd resources_old/
zip -r resources_patched.zip .
mv resources_patched.zip /opt/spotify/spotify-client/Data/resources.zip
cd ./..
rm -f resources_old.zip
rm -rf resources_old 

